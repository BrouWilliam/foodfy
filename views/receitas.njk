{% extends "layout.njk"%}

{% block head %}
    <title>Receitas - Foodfy</title>
{% endblock %}

{% block content%}
    <section class="mais-acessadas container">
        <h2>Mais acessadas</h2>

        <div class="display">
            {% for item in items %}
                <div class="content" id="{{loop.index0}}">
                    <img src="{{item.image}}" alt="Imagem de {{item.title}}">
                    <h4>{{item.title}}</h4>
                    <span>por {{item.author}}</span>
                </div>
            {% endfor %}

        </div>
    </section>
{% endblock%}